<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kash.triplog.Main.MainView"
             xmlns:ktm="clr-namespace:kash.triplog.Main"
             Title="Trip Log">
  
  <ContentPage.ToolbarItems>
      <ToolbarItem Name="NewButton" Text="New" Command="{Binding NewCommand}" />
  </ContentPage.ToolbarItems>

  <StackLayout x:Name="RootLayout" HorizontalOptions="Center">
    <ListView x:Name="Entries" ItemsSource="{Binding LogEntries}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Title}" Detail="{Binding Notes}">
              <!--<TextCell.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ShowDetail}" />
              </TextCell.GestureRecognizers>-->
          </TextCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>